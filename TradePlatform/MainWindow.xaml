<Window x:Class="TradePlatform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradePlatform"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="{DynamicResource Background}">
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18" Foreground="{DynamicResource AccentDarkForegroundBrush}">Hello world</TextBlock>
        <Button Background="{DynamicResource PrimaryDarkBrush}" Padding="30 6" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click" Content="123">
            
        </Button>
        <CheckBox Click="RadioButton_Checked" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 80 0 0"></CheckBox>
    </Grid>
</Window>
